{
  "name": "react-mla",
  "version": "1.1.5",
  "license": "MIT",
  "type": "module",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "main": "./dist/react-mla.umd.cjs",
  "module": "./dist/react-mla.js",
  "exports": {
    ".": {
      "import": "./dist/react-mla.js",
      "require": "./dist/react-mla.umd.cjs"
    },
    "./dist/*.css": {
      "import": "./dist/*.css",
      "require": "./dist/*.css"
    }
  },
  "dependencies": {
    "@geoman-io/leaflet-geoman-free": "^2.17.0",
    "glob": "^13.0.0",
