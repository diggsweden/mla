    "@repo/tailwind-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@testing-library/dom": "10.4.1",
    "@testing-library/react": "16.3.1",
    "@types/leaflet": "1.9.21",
    "@types/luxon": "3.7.1",
    "@types/node": "20.19.27",
