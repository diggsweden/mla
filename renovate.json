{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":gitSignOff",
    ":maintainLockFilesWeekly"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "addLabels": [
        "actions"
      ]
    },
    {
      "matchManagers": [
        "npm"
      ],
      "addLabels": [
        "npm"
      ]
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "groupName": "dev Dependencies (non-major)",
      "addLabels": [
        "dependencies"
      ],
      "automerge": true
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "addLabels": [
        "dependencies"
      ]
    },
    {
      "matchDepTypes": [
        "dependencies"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "groupName": "dependencies (non-major)",
      "addLabels": [
        "dependencies"
      ],
      "automerge": true
    },
    {
      "matchDepTypes": [
        "dependencies"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "addLabels": [
        "dependencies"
      ]
    },
    {
      "description": "Block typescript from upgrading until eslint supports 5.6",
      "matchPackageNames": [
        "typescript"
      ],
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "enabled": false
    }
  ]
}
